{
  "openrpc": "1.0.0",
  "info": {
    "title": "ipfs JSON-RPC API",
    "version": "1.0.0"
  },
  "methods": [
    {
      "name": "ipfs.StoreFile",
      "description": "Store content on ipfs, returns cid",
      "params": [
        {
          "name": "content",
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "cid",
        "schema": {
          "type": "string"
        }
      }
    },
    {
      "name": "ipfs.GetFile",
      "description": "Gets file content from ipfs based on cid",
      "params": [
        {
          "name": "cid",
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "!string",
        "schema": {
          "type": "string"
        }
      }
    },
    {
      "name": "ipfs.RemoveFile",
      "description": "Removes files based on cid",
      "params": [
        {
          "name": "cid",
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "!bool",
        "schema": {
          "type": "boolean"
        }
      }
    },
    {
      "name": "ipfs.RemoveAllFiles",
      "description": "remove all files from ipfs",
      "params": [
      ],
      "result": {
        "name": "!",
        "schema": {
          "type": "null"
        }
      }
    },
    {
      "name": "ipfs.ListCids",
      "description": "list all cids from ipfs",
      "params": [
      ],
      "result": {
        "name": "![]string",
        "schema": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  ]
}