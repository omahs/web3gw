{
  "openrpc": "1.0.0",
  "info": {
    "title": "stellar JSON-RPC API",
    "version": "1.0.0"
  },
  "methods": [
    {
      "name": "stellar.Load",
      "description": "Load a client, connecting to the rpc endpoint at the given network and loading a keypair from the given secret.",
      "params": [
        {
          "name": "args",
          "schema": {
            "$ref": "#\/components\/schemas\/Load"
          }
        }
      ],
      "result": {
        "name": "!",
        "schema": {
          "type": "null"
        }
      }
    },
    {
      "name": "stellar.Transer",
      "description": "Transer an amount of TFT from the loaded account to the destination.",
      "params": [
        {
          "name": "args",
          "schema": {
            "$ref": "#\/components\/schemas\/Transfer"
          }
        }
      ],
      "result": {
        "name": "!",
        "schema": {
          "type": "null"
        }
      }
    },
    {
      "name": "stellar.Balance",
      "description": "Balance of an account for TFT on stellar.",
      "params": [
        {
          "name": "address",
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "!i64",
        "schema": {
          "type": "string"
        }
      }
    }
  ],
  "components": {
    "schemas": {
      "Load": {
        "title": "Load",
        "properties": {
          "network": {
            "type": "string"
          },
          "secret": {
            "type": "string"
          }
        }
      },
      "Transfer": {
        "title": "Transfer",
        "properties": {
          "amount": {
            "type": "string"
          },
          "destination": {
            "type": "string"
          },
          "memo": {
            "type": "string"
          }
        }
      }
    }
  }
}